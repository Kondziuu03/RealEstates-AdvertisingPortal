<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstates</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstates.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Announcement" asp-action="Announcements">
                                Ogłoszenia
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Announcement" asp-action="AddAnnouncement">
                                Dodaj ogłoszenie
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-white">
            &copy; @DateTime.Now.Year - RealEstates - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery.cookie/jquery.cookie.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <div class="privacy-police-info" style="display: none;">
        Korzystając ze strony wyrażasz zgodę na wykorzystanie plików cookies.
        <button onclick="closePrivacyPolice()" type="button" class="btn btn-danger btn-sm mx-3 my-1 privacy-police-btn">
            Zgadzam się.
        </button>
    </div>

    <script>
        $(document).ready(function() {
            if ($.cookie("privacyPolice") !== "1")
                $(".privacy-police-info").show();
        });

        function closePrivacyPolice() {
            $(".privacy-police-info").hide();
            $.cookie("privacyPolice", "1", { path: '/', expires: 10 });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <partial name="_NotificationPartial" />

</body>
</html>
