@using RealEstates.Application.Announcements.Queries.GetAnnouncement
@model IEnumerable<AnnouncementDto>



    <div class="card card-primary card-border-top">
        <div class="card-body">
            <table id="announcements" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ogłoszenie</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var announcement in Model)
                {
                    <tr>
                        <td>
                            <a href='/Announcement/Announcement?id=@announcement.Id'>@announcement.Name</a>
                        </td>
                        <td>
                            @if (ViewBag.ShowButtonToAccept)
                            {
                                <button class="btn btn-success btn-sm" onclick="acceptAnnouncement('@announcement.Id', this)">
                                    <i class="fa-solid fa-check"></i>Akceptuj
                                </button>
                            }
                            <button class="btn btn-danger btn-sm" onclick="deleteAnnouncement('@announcement.Id', this)">
                                <i class="fas fa-solid fa-trash-can"></i>Usuń
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
